<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
  	<extension
		point="org.eclipse.ui.commands">
		<category
			id="coastal-popup.commands.category"
			name="COASTAL Launch Category">
		</category>
		<command
			categoryId="coastal-popup.commands.category"
			id="coastal-popup.commands.launchCommand"
			name="COASTAL">
		</command>
		<command
			categoryId="coastal-popup.commands.category"
			id="coastal-popup.commands.loggedLaunchCommand"
			name="COASTAL LOGGED">
		</command>
	</extension>
	<extension
		point="org.eclipse.ui.handlers">
		<handler
			class="za.ac.sun.cs.coastal.popup.handlers.Launcher"
			commandId="coastal-popup.commands.launchCommand">
		</handler>
		<handler
			class="za.ac.sun.cs.coastal.popup.handlers.LoggedLauncher"
			commandId="coastal-popup.commands.loggedLaunchCommand">
		</handler>
	</extension>
	<extension
		point="org.eclipse.ui.menus">
		<menuContribution
			locationURI="popup:org.eclipse.jdt.ui.PackageExplorer?before=group.new">
		<!--
			locationURI="popup:org.eclipse.jdt.ui.PackageExplorer?before=group.edit">
			locationURI="popup:org.eclipse.jdt.ui.PackageExplorer?before=additions">
		-->
			<command
				commandId="coastal-popup.commands.loggedLaunchCommand"
				id="coastal-popup.menus.loggedLaunchCommand"
				icon="icons/coastal.png">
				<visibleWhen>
					<with variable="activeMenuSelection">
						<iterate
							ifEmpty="false">
							<adapt type="org.eclipse.core.resources.IResource">
								<test
									property="org.eclipse.core.resources.name"
									value="*.properties"/>
							</adapt>
						</iterate>
					</with>
				</visibleWhen>
			</command>
		</menuContribution>
		<menuContribution
			locationURI="popup:org.eclipse.jdt.ui.PackageExplorer?before=group.new">
			<command
				commandId="coastal-popup.commands.launchCommand"
				id="coastal-popup.menus.launchCommand"
				icon="icons/coastal.png">
				<visibleWhen>
					<with variable="activeMenuSelection">
						<iterate
							ifEmpty="false">
							<adapt type="org.eclipse.core.resources.IResource">
								<test
									property="org.eclipse.core.resources.name"
									value="*.properties"/>
							</adapt>
						</iterate>
					</with>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
	<extension
		point="org.eclipse.ui.preferencePages">
		<page
			class="za.ac.sun.cs.coastal.popup.preferences.CoastalPopupPage"
			id="coastal-popup.preferences.CoastalPopupPage"
			name="COASTAL">
		</page>
	</extension>
	<extension
		point="org.eclipse.core.runtime.preferences">
		<initializer
			class="za.ac.sun.cs.coastal.popup.preferences.PreferenceInitializer">
		</initializer>
 	</extension>
</plugin>
